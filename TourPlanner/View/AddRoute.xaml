<Window
    x:Class="tour_planner.View.AddRoute"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tour_planner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddRoute"
    Width="800"
    Height="250"
    mc:Ignorable="d">
        <StackPanel HorizontalAlignment="Center">
        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Text="Name of the new Route: " />
        <TextBox Text="New Route" x:Name="ResponseTextBox"></TextBox>
        <Button Content="Add new Route" Click="Button_Click"></Button>
        </StackPanel>
</Window>
