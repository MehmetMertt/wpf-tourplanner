<UserControl
    x:Class="tour_planner.View.TourLogsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tour_planner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="5"
            FontWeight="Bold"
            Foreground="{StaticResource TextColorBrush}"
            Text="Tour Data" />
        <Grid Margin="0,5,0,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Width="50"
                Height="20"
                HorizontalAlignment="Center"
                Command="{Binding OpenNewPage}"
                Content="➕"
                Style="{StaticResource ActionButton}" />
            <Button
                Grid.Column="1"
                Width="50"
                Height="20"
                HorizontalAlignment="Center"
                Command="{Binding DeleteCommand}"
                Content="🗑️"
                Style="{StaticResource ActionButton}" />
            <Button
                Grid.Column="2"
                Width="50"
                Height="20"
                HorizontalAlignment="Center"
                Command="{Binding OpenEditPage}"
                Content="✏️"
                Style="{StaticResource ActionButton}" />
            <Button
                Grid.Column="3"
                Width="50"
                Height="20"
                HorizontalAlignment="Center"
                Command="{Binding SaveReport}"
                Content="PDF"
                Style="{StaticResource ActionButton}" />
        </Grid>
        <DataGrid
            Name="datagrid"
            AutoGenerateColumns="False"
            Background="Transparent"
            BorderBrush="Transparent"
            BorderThickness="10"
            CanUserReorderColumns="False"
            CanUserResizeColumns="False"
            CanUserResizeRows="False"
            FocusVisualStyle="{x:Null}"
            GridLinesVisibility="None"
            HeadersVisibility="Column"
            IsReadOnly="True"
            ItemsSource="{Binding TourLogs}"
            SelectedItem="{Binding SelectedLog}"
            SelectionMode="Single"
            SelectionUnit="FullRow">

            <!--  Header Styling  -->
            <DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}" />
                    <Setter Property="Margin" Value="0,5" />
                    <Setter Property="Foreground" Value="{StaticResource TextColorBrush}" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Padding" Value="5" />
                </Style>
            </DataGrid.Resources>

            <!--  Row Styling  -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Margin" Value="0,2" />
                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource TextColorBrush}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColorBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <!--  Cell Styling  -->
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Background" Value="{StaticResource SecondaryBrush}" />
                    <Setter Property="Foreground" Value="{StaticResource TextColorBrush}" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Style.Triggers>
                        <!--  Highlight the cell with the same accent color when selected  -->
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource AccentBrush}" />
                            <Setter Property="Foreground" Value="{StaticResource TextColorBrush}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <!--  Column Definitions  -->
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding DateString}"
                    Header="Date" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Duration}"
                    Header="Duration" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Distance}"
                    Header="Distance" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Comment}"
                    Header="Comment" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Difficulty}"
                    Header="Difficulty" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Rating}"
                    Header="Rating" />
            </DataGrid.Columns>
        </DataGrid>




    </StackPanel>
</UserControl>
