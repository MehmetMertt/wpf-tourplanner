<UserControl
    x:Class="tour_planner.View.Routes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tour_planner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Grid.Column="0" Margin="5">

        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
            <Button
                Width="Auto"
                Command="{Binding OpenAddPage}"
                Content="New Tour" />
            <Button
                Width="Auto"
                Margin="10,0,0,0"
                Command="{Binding DeleteTourCommand}"
                Content="Delete" />
            <Button
                Width="Auto"
                Margin="10,0,0,0"
                Command="{Binding OpenEditPage}"
                Content="..." />
        </StackPanel>
        <TextBlock
            FontWeight="Bold"
            Foreground="White"
            Text="Tours" />
        <ListView
            DisplayMemberPath="Name"
            ItemsSource="{Binding Tours}"
            MouseDoubleClick="ListView_MouseDoubleClick"
            SelectedItem="{Binding SelectedTour}" />
        <!--  SelectionChanged="lstRoutes_SelectionChanged"  -->
    </StackPanel>

</UserControl>
