<UserControl
    x:Class="tour_planner.View.Routes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tour_planner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel Grid.Column="0" Margin="5">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="0"
                Margin="5"
                Command="{Binding AddNewRoute}"
                Content="+" />
            <Button
                Grid.Column="1"
                Margin="5"
                Content="-" />
            <Button
                Grid.Column="2"
                Margin="5"
                Command="{Binding EditRoute}"
                CommandParameter="{Binding SelectedRoute}"
                Content="..." />
        </Grid>
        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Foreground="{StaticResource TextColorBrush}"
            Text="Routen" />
        <ListBox
            Name="lstRoutes"
            DisplayMemberPath="Name"
            ItemsSource="{Binding Routes}"
            SelectedItem="{Binding SelectedRoute}" />
        <!--  SelectionChanged="lstRoutes_SelectionChanged"  -->
    </StackPanel>

</UserControl>
