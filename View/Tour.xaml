<UserControl
    x:Class="tour_planner.View.Routes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tour_planner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Grid.Column="0" Margin="5">
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="New Tour" Command="{Binding AddTourCommand}" Width="Auto"/>
            <Button Content="Delete" Command="{Binding DeleteTourCommand}" Width="Auto" Margin="10,0,0,0"/>
        </StackPanel>
        <TextBlock FontWeight="Bold" Text="Tours" Foreground="White"/>
        <ListView ItemsSource="{Binding Tours}" SelectedItem="{Binding SelectedTour}" DisplayMemberPath="Name"></ListView>
        <!--  SelectionChanged="lstRoutes_SelectionChanged"  -->
    </StackPanel>

</UserControl>
