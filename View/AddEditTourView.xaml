<Window
    x:Class="tour_planner.View.AddEditTour"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tour_planner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddEditTour"
    Width="800"
    Height="220"
    Style="{StaticResource CustomWindowStyle}"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,10"
            HorizontalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="White"
            Text="Details" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            Foreground="White"
            Text="Name:" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding Tour.Name, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Foreground="White"
            Text="Date:" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Text="{Binding Tour.Date, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="3"
            Grid.Column="0"
            Foreground="White"
            Text="Duration:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Text="{Binding Tour.TotalDuration, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock
            Grid.Row="4"
            Grid.Column="0"
            Foreground="White"
            Text="Distance:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Text="{Binding Tour.TotalDistance, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Grid.Row="5"
            Grid.Column="0"
            Command="{Binding SaveCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Content="Save" />

        <Button
            Grid.Row="6"
            Grid.Column="0"
            Content="Cancel" />

    </Grid>
</Window>
