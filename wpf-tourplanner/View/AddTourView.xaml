<Window
    x:Class="tour_planner.View.AddTourView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:tour_planner.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddEditTour"
    Width="400"
    Height="300"
    MinWidth="400"
    MinHeight="250"
    Style="{StaticResource CustomWindowStyle}"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="20"
            GlassFrameThickness="0"
            ResizeBorderThickness="4" />
    </WindowChrome.WindowChrome>
    <StackPanel VerticalAlignment="Center">

        <Grid Margin="20,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Foreground="White"
                Text="Add Tour" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Foreground="White"
                Text="Name:" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                IsEnabled="{Binding IsActionEnabled}"
                Text="{Binding CopyTour.Name, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Foreground="White"
                Text="Date:" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                IsEnabled="{Binding IsActionEnabled}"
                Text="{Binding CopyTour.Date, UpdateSourceTrigger=PropertyChanged}" />


            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Foreground="White"
                Text="Description:" />
            <TextBox
                Grid.Row="5"
                Grid.Column="1"
                IsEnabled="{Binding IsActionEnabled}"
                Text="{Binding CopyTour.Description, UpdateSourceTrigger=PropertyChanged}" />


            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Foreground="White"
                Text="From:" />
            <TextBox
                Grid.Row="6"
                Grid.Column="1"
                IsEnabled="{Binding IsActionEnabled}"
                Text="{Binding CopyTour.From, UpdateSourceTrigger=PropertyChanged}" />



            <TextBlock
                Grid.Row="7"
                Grid.Column="0"
                Foreground="White"
                Text="To:" />
            <TextBox
                Grid.Row="7"
                Grid.Column="1"
                IsEnabled="{Binding IsActionEnabled}"
                Text="{Binding CopyTour.To, UpdateSourceTrigger=PropertyChanged}" />


            <TextBlock
                Grid.Row="8"
                Grid.Column="0"
                Foreground="White"
                Text="TransportType:" />
            <TextBox
                Grid.Row="8"
                Grid.Column="1"
                IsEnabled="{Binding IsActionEnabled}"
                Text="{Binding CopyTour.TransportType, UpdateSourceTrigger=PropertyChanged}" />

        </Grid>

        <Grid Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="From-weather: " Foreground="White"/>
            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FromWeatherForecast}" Foreground="White"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="To-weather: " Foreground="White"/>
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ToWeatherForecast}" Foreground="White"/>
        </Grid>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Margin="0,0,10,0"
                Command="{Binding SaveCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Save"
                IsEnabled="{Binding IsActionEnabled}"
                Style="{StaticResource DarkThemeButton}" />

            <Button 
                Content="Cancel"
                Command="{Binding CancelCommand}" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" 
                Style="{StaticResource DarkThemeButton}" />
        </StackPanel>

    </StackPanel>

</Window>
